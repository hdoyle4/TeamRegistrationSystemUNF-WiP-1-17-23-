@model IEnumerable<Competition>

<h1>Current Competitions</h1>
<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Competition</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Location</th>
            <th>Description</th>
            <th>Max Team Size</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var competition in Model)
        {
            <tr>
                <td width="10%">@competition.CompetitionName</td>
                <td width="8%">@competition.CompetitionDate.ToString("MM/dd/yyyy")</td>
                <td width="8%">@competition.CompetitionStartTime.ToString("h:mm tt")</td>
                <td width="8%">@competition.CompetitionEndTime.ToString("h:mm tt")</td>
                <td width="16%">@competition.CompetitionLocation</td>
                <td width="20%">@competition.CompetitionDescription</td>
                <td width="10%">@competition.CompetitionMaxTeamSize</td>
                <td width="10%">
                        <a asp-controller="Competition" asp-action="CompetitionHome" asp-route-CompetitionID=@competition.CompetitionID 
                        class="btn btn-primary">
                            View Information
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>