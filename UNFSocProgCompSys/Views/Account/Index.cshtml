@model IEnumerable<User>
@{
    ViewBag.Title = "User Accounts";
    Layout = "_AdminLayout";
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-condensed table-bordered">
    <tr>
        <!--<th>ID</th>-->
        <th>UserName</th>
        <th>Email</th>
        <!--<th>Password</th>-->
    </tr>
    @if (Model.Count() > 0)
 {
     foreach (User appUser in Model)
 {
    <tr>
        <!--<td>@appUser.Id</td>-->
        <td>@appUser.UserName</td>
        <td>@appUser.Email</td>
        <!--<td>@appUser.PasswordHash</td>-->
        <td>
            <a class="btn btn-success" asp-controller="Account" asp-action="Edit" asproute-id="@appUser.Id">Edit</a>
            <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asproute-id="@appUser.Id">Delete</a>
        </td>
    </tr>
 }
    
 }
 else
 {
    <tr>
        <td colspan="3" class="text-center">
            No User Accounts
        </td>
    </tr>
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>