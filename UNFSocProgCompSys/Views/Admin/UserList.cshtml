@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewBag.Title = "User Accounts";
    Layout = "_AdminLayout";
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-condensed table-bordered">
    <tr>
        <!--<th>ID</th>-->
        <th>UserName</th>
        <th>Email</th>
        <!--<th>Password</th>-->
    </tr>
 @if (Model.Count() > 0)
 {
     foreach (var appUser in Model)
 {
    <tr>
        <!--<td>@appUser.Id</td>-->
        <td>@appUser.UserName</td>
        <td>@appUser.Email</td>
        <!--<td>@appUser.PasswordHash</td>-->
        <td>
            @*<a class="btn btn-success" asp-controller="Admin" asp-action="UserEdit" asproute-id="@appUser.Id">Edit</a>*@
            <form method="post" asp-action="DeleteUser" asp-route-id="@appUser.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>
    </tr>
 }
    
 }
 else
 {
    <tr>
        <td colspan="3" class="text-center">
            No User Accounts
        </td>
    </tr>
    }
</table>

